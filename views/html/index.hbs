<div class="index-content">
    <form action="" class="auth-form" method="post" enctype="multipart/form-data">
        <label for="login" class="auth-form__label" >
            <input type="text" id="login" placeholder="Логин" value="" name="login">
        </label>
        <label for="password" class="auth-form__label" >
            <input type="password" id="password" placeholder="Пароль" value="" name="password">
        </label>
        <button type="submit" class="index__button register-button btn btn-primary">
            <span>Зарегистрироваться</span>
        </button>
        <button type="submit" class="index__button auth-button btn btn-success">
            <span>Войти</span>
        </button>
        <div class="index__button fail-auth btn btn-danger">Неверное имя пользователя или пароль</div>
    </form>
</div>
